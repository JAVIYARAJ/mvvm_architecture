<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/custom_rounded_background"
            >
            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/airLineImage"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_weight="3"
                android:paddingStart="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/countryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="India"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/airLineName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="India Airline"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/airLineSlogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Slogan"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/airLineHeadQuater"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="head quaters"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/airLineDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="established"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>